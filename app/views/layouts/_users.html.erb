<% if current_user %>
  <% if User.count > 0 %>
    <% for user in User.find(:all, :order => "login ASC") %>
      <div class="menu_link_title has_submenu">
        <a href="<%= user_path(user) %>" class="menu_link <%=h active_link_class(user) %>">
          <%=h user.name %>
        </a>
      </div>
    <% end %>
  <% else %>
    <li>
      No user created yet<br/>
    </li>
  <% end %>
  <% if current_user.admin? -%>
    <br/>
    <%= link_to 'New user', new_user_path%>
  <%  end %>
<% end %>
