<% if @project.stages.empty? %>
  <p>
    No stages configured yet.<br />
    Stages represent one deployment scenario of a project. Typical stages are a 'Prod', 'Test' and 'Dev' stage.</p>
<% else %>
  <div class="custom-table large">
    <table>
        <tr>
          <td>Name</td>
          <td>Hosts</td>
          <td>Deployments</td>
          <td>Edit</td>
          <td>Remove</td>
        </tr>
        <% @project.stages.each do |stage| %>
          <tr>
            <td><%= link_to stage.name, project_stage_path(@project, stage) %></td>
            <td><%= stage.hosts.count  %></td>
            <td><%= stage.deployments.count  %></td>
            <td><%= link_to image_tag('icons/buttons/edit.png', :width => "25", :height => "25", :title => "Edit"), edit_project_stage_path(@project, stage) %></td>
            <td><%= link_to image_tag('icons/buttons/delete.png', :width => "25", :height => "25", :title => "Delete"), project_stage_path(@project, stage), data: { confirm: 'Are you sure?' }, method: :delete %></td>
          </tr>
        <% end %>
    </table>
  </div>
<% end %>
