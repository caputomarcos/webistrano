<% content_for :page_title do %>
  <% @page_title = "Deployments of user #{@user.login}" %>
  <h1>Deployments of user <%= link_to  @user.login, user_path(@user) %></h1>
<% end %>

<% content_for :breadcrumb do %>
  <%= breadcrumb_box do %>
    <%= link_to "Users", users_path %>
    <span class="divider">&raquo;</span>
    <%= link_to @user.login, user_path(@user) %>
    <span class="divider">&raquo;</span>
    <%= link_to @user.login, user_path(@user) %>
    <span class="divider">&raquo;</span>
    Deployments
  <% end %>
<% end %>

<section>
  <h2>Complete deployment history</h2>
  <%= render partial: 'deployments', locals: { deployments: @deployments, user: @user } %>
  <%= link_to 'Back to user', user_path(@user), class: 'arrow_link' %>
</section>
