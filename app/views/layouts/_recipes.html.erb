<% if current_user %>
  <% if Recipe.count > 0 %>
    <% for recipe in Recipe.find(:all, :order => "name ASC") %>
      <li><%= link_to recipe.name, recipe_path(recipe) %></li>
    <% end %>
  <% else %>
    <li>
      No recipe created yet<br />
    </li>
  <% end %>
  <% if current_user.admin? -%>
    <br/>
    <%= link_to 'New recipe', new_recipe_path%>
  <%end -%>
<% end %>