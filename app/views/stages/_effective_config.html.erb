<h3>Effective Configuration</h3>

<% if @stage.effective_configuration.empty? %>
  <p>No effective configuration present. The effective configuration is the result of the stage specific configuration entries overriding the project configuration entries.</p>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Value</th>
        <th>Prompt</th>
      </tr>
    </thead>
    <tbody>
      <% @stage.effective_configuration.each do |conf| %>
        <tr>
          <td><%= truncate(conf.name, length: 25) %></td>
          <td><%= truncate(hide_password_in_value(conf), length: 45) %></td>
          <td><%= conf.prompt_status_in_html %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
