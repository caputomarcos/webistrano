<% content_for(:page_title) do %>
  <% @page_title = "Edit project #{@project.name}" %>
  <h1>Edit <%= link_to current_project.name, project_path(current_project) %></h1>
<% end %>

<% content_for(:breadcrumb) do %>
  <%= breadcrumb_box do %>
    <%= link_to "Projects", projects_path %>
    <span class="divider">&raquo;</span>
    <%= link_to @project.name, project_path(@project) %>
    <span class="divider">&raquo;</span>
    Edit
  <% end %>
<% end %>

<section>
  <%= form_for @project, html: { class: "form-horizontal" } do |f| %>
  <%= render partial: 'form', locals: { form: f }%>
  <div class="form-actions">
    <%= f.submit "Update project", class: "custom-button-add" %>
    <%= link_to "â—„ Back to projects", projects_path, class: "custom-button-back" %>
  </div>
<% end %>
</section>
