<%= form_for(:recipe, :url => recipe_path(@recipe), :html => { :method => :put }) do |f| %>

  <%= render('form', { :form => f })%>

  <div class="form-actions">
    <%= f.submit "Update recipe", class: "custom-button-add" %>
    <%= link_to "â—„ Back to recipes", recipes_path, class: "custom-button-back" %>
  </div>
<% end %>


<% content_for(:breadcrumb) do %>
  <%= breadcrumb_box do %>
    <%= link_to "Back to recipe", recipe_path(@recipe), :style => "float:right", class: "arrow_link" %>
    <%= link_to "Recipes", recipes_path %> &gt;
    Recipe <%= link_to @recipe.name, recipe_path(@recipe) %>  &gt;
    Edit
  <% end %>
<% end %>

<% content_for(:page_title) do %>
  <% @page_title = "Edit recipe #{@recipe.name}" %>
  <h2>Edit recipe <%= link_to @recipe.name, recipe_path(@recipe) %></h2>
<% end %>
