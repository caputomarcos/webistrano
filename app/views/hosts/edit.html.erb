<% content_for :page_title do %>
  <% @page_title = "Edit host #{@host.name}" %>
  <h1>Edit host <%= @host.name %></h1>
<% end %>

<% content_for :breadcrumb do %>
  <%= breadcrumb_box do %>
    <%= link_to "Hosts", hosts_path %>
    <span class="divider">&raquo;</span>
    <%= link_to @host.name, @host %>
    <span class="divider">&raquo;</span>
    Edit
  <% end %>
<% end %>

<% flashed_errors(:host) %>

<section>
  <%= form_for @host, html: { class: "form-horizontal" } do |f| %>
    <%= render partial: 'form', locals: { form: f } %>
    <div class="form-actions">
      <%= f.submit "Update host", class: "custom-button-add" %>
      <%= link_to "â—„ Back to hosts", hosts_path, class: "custom-button-back" %>
    </div>
  <% end %>
</section>
